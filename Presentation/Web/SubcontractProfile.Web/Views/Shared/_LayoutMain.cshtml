    <script>
        $(document).ready(function () {
            $('.hei,.hei2,.hei3,.hei4,.hei5,.hei_price').matchHeight();

            $('.filter_nav_in .item .heading').click(function () {
                var a = $(this).closest('.item');
                var b = $(a).hasClass('open');
                var c = $(a).closest('.filter_nav_in').find('.open');
                if (b != true) {
                    $(c).find('.content').slideUp(200);
                    $(c).removeClass('open');
                }
                $(a).toggleClass('open');
                $(a).find('.content').slideToggle(200);
            });

            $('.menu_bar').click(function (event) {
                open_menu();
            });
            $('.overlay_content_card').click(function (event) {
                close_menu();
            });


            $('.filter_mb ul li').click(function () {
                $('.filter_mb ul li').removeClass('active');
                $(this).addClass('active');
            });



            $('.wrap_left_menu').stickySidebar({
                topSpacing: 50,
                bottomSpacing: 50,
                containerSelector: '#main_package',
                innerWrapperSelector: '.wrap_left_menu',
                minWidth: 576
            });





        });

        $(window).scroll(function () {
            if ($(this).scrollTop() > 1200) {
                close_menu();
            }
        });

        //$(window).scroll(function () {
        //    if ($(this).scrollTop() > $('#main_package').height() - 100) {
        //        $('.wrap_menu_bar').fadeOut('slow');
        //    } else {
        //        console.log('error');
        //        $('.wrap_menu_bar').fadeIn('slow');
        //    }
        //});

        $(window).resize(function () {
            close_menu();
        });

        function open_menu() {
            $('.filter_nav.filter').toggleClass('open');
            $('.overlay_content_card').toggleClass('open');
            $('.content_card').toggleClass('open');
            $('.icon_menu').toggleClass('open');
            $('.box_txthead_main').toggleClass('open');
        }

        function close_menu() {
            $('.filter_nav.filter').removeClass('open');
            $('.overlay_content_card').removeClass('open');
            $('.content_card').removeClass('open');
            $('.icon_menu').removeClass('open');
            $('.box_txthead_main').removeClass('open');
        }
        function showFeedback(type, msg, title, footer) {
            //if (msg !== "") {
            $("#headerMessageFeedback").removeClass();
            $("#headerMessageFeedback").addClass("modal-header");
            if (type === "primary") { $("#headerMessageFeedback").addClass("btn-primary"); }
            else if (type === "success") { $("#headerMessageFeedback").addClass("btn-success"); }
            else if (type === "info") { $("#headerMessageFeedback").addClass("btn-info"); }
            else if (type === "warning") { $("#headerMessageFeedback").addClass("btn-warning"); }
            else if (type === "error") { $("#headerMessageFeedback").addClass("btn-danger"); }
            else if (type === "light") { $("#headerMessageFeedback").addClass("btn-light"); }
            else if (type === "secondary") { $("#headerMessageFeedback").addClass("btn-secondary"); }
            else { $("#headerMessageFeedback").addClass("btn-default"); }

            if (title !== undefined) $("#MessageFeedbackPopUpLabel").text(title); else $("#MessageFeedbackPopUpLabel").text("Notification");


            $("#lbMessageFeedback").html(msg);
            if (footer != "") {
                $('.modal-footer').html(footer)
            }
            $("#MessageFeedbackPopUp").modal('show');
            //}
        }
    </script>

