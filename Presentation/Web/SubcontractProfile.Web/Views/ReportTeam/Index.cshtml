@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "ReportTeam";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div id="pageID" style="display:none;">LocationReport</div>
<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 layout-spacing">
    <div class="skills layout-spacing">


        <div class="widget-content widget-content-area">
            <h3 class="">@Localizer["ReportTeam"]</h3>

            <div class="widget-content1">
                <div class="form-row mb-4">

                    <div class="form-group col-md-6">
                        <label for="txtteamcode">@Localizer["TeamCode"]</label>
                        <input type="text" class="form-control" id="txtteamcode" onkeypress="return isNumberKey(event);" />
                    </div>

                    <div class="form-group col-md-6">
                        <label for="txtlocationcode">@Localizer["LocationCode"]</label>
                        <input type="text" class="form-control" id="txtlocationcode" onkeypress="return isNumberKey(event);" />
                    </div>


                    <div class="form-group col-md-6">
                        <label for="txtvendorcode">@Localizer["VendorCode"]</label>
                        <input type="text" class="form-control" id="txtvendorcode" onkeypress="return isNumberKey(event);" />
                    </div>


                </div>
                <div class="form-row mb-4">
                    <div class="form-group col-md-6">
                        <label for="createFrom">@Localizer["CreateDateFrom"]</label>
                        <div class='input-group p-0 date' id='dtcreateFrom'>
                            <input type='text' class="form-control" id="dtcrtFrom" />
                            <div class="input-group-append input-group-addon">
                                <span class="input-group-text px-4">
                                    <i class="fa fa-calendar"></i>
                                </span>
                            </div>

                        </div>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="creatTo">@Localizer["CreateDateTo"]</label>
                        <div class='input-group p-0 date' id='dtcreateTo'>
                            <input type='text' class="form-control" id="dtcrtTo" />
                            <div class="input-group-append input-group-addon">
                                <span class="input-group-text px-4">
                                    <i class="fa fa-calendar"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                <div style="text-align:center">

                    <button id="btnclear" type="button" onclick="clearField();" class="btn btn-dark mb-2">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                             stroke-linecap="round" stroke-linejoin="round" class="feather feather-x-circle">
                            <circle cx="12" cy="12" r="10"></circle>
                            <line x1="15" y1="9" x2="9" y2="15"></line>
                            <line x1="9" y1="9" x2="15" y2="15"></line>
                        </svg> @Localizer["Reset"]
                    </button>
                    <button id="btnSearch" type="button" onclick="onLoadDataTeam();" class="btn btn-success mb-2">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                             stroke-linecap="round" stroke-linejoin="round" class="feather feather-search">
                            <circle cx="11" cy="11" r="8"></circle>
                            <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
                        </svg> @Localizer["Search"]
                    </button>

                </div>

            </div>

            <br />
            <div class="widget-heading">
                <h3 class=""> @Localizer["SearchTeamResult"]</h3>

            </div>
            <div class="table-responsive mb-4 mt-4">
                <table id="tbSearchTeamResult" class="table table-hover" style="width:100%">
                    <thead>
                        <tr>
                            <th>@Localizer["team_code"]</th>
                            <th>@Localizer["team_name"]</th>
                            <th>@Localizer["team_name_th"]</th>
                            <th>@Localizer["team_name_en"]</th>
                            <th>@Localizer["ship_to"]</th>
                            <th>@Localizer["stage_local"]</th>
                            <th>@Localizer["oos_storage_location"]</th>
                            <th>@Localizer["location_code"]</th>
                            <th>@Localizer["vendor_code"]</th>
                            <th>@Localizer["job_type"]</th>
                            <th>@Localizer["subcontract_type"]</th>
                            <th>@Localizer["subcontract_sub_type"]</th>
                            <th>@Localizer["warranty_ma"]</th>
                            <th>@Localizer["warranty_install"]</th>
                            <th>@Localizer["service_skill"]</th>
                            <th>@Localizer["installations_contract_phone"]</th>
                            <th>@Localizer["maintenance_contract_phone"]</th>
                            <th>@Localizer["etc_contract_phone"]</th>
                            <th>@Localizer["installations_contract_email"]</th>
                            <th>@Localizer["maintenance_contract_email"]</th>
                            <th>@Localizer["etc_contract_email"]</th>
                            <th>@Localizer["status"]</th>
                            <th>@Localizer["create_date"]</th>
                            <th>@Localizer["create_by"]</th>
                            <th>@Localizer["update_date"]</th>
                            <th>@Localizer["update_by"]</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>

</div>


@section scripts{

    <script type="text/javascript">
        var oTable;
        var oTableLocation;
        var _loctioncode = $("#txtlocationcode").val();
        var _vendorcode = $("#txtvendorcode").val();
           $(document).ready(function () {



               $('#dtcreateFrom').datetimepicker({
                format: "DD/MM/YYYY",
              //  minDate: new Date(),
                showClear: true,
                showClose: true,
                icons: {
                    time: 'fa fa-clock-o',
                    date: 'fa fa-calendar',
                    up: 'fa fa-chevron-up',
                    down: 'fa fa-chevron-down',
                    previous: 'fa fa-chevron-left',
                    next: 'fa fa-chevron-right',
                    today: 'icon-screenshot',
                    clear: 'fa fa-trash',
                    close: 'fa fa-time'
                }
            });
               var fromdate = $('#dtcrtFrom').val();

               $('#dtcreateTo').datetimepicker({
                format: "DD/MM/YYYY",
                ///   minDate: new Date(fromdate),
                showClear: true,
                showClose: true,
                icons: {
                    time: 'fa fa-clock-o',
                    date: 'fa fa-calendar',
                    up: 'fa fa-chevron-up',
                    down: 'fa fa-chevron-down',
                    previous: 'fa fa-chevron-left',
                    next: 'fa fa-chevron-right',
                    today: 'icon-screenshot',
                    clear: 'fa fa-trash',
                    close: 'fa fa-time'
                }
            });


               onLoadDataTeam();
        });



        function onLoadDataTeam() {
             var i = 0;
             oTableEngineer = $('#tbSearchTeamResult').DataTable({
                 processing: true, // for show progress bar
                 serverSide: true, // for process server side
                 filter: false, // this is for disable filter (search box)
                 orderMulti: false, // for disable multiple column at once
                 pageLength: 10,
                 order: [],
                 autoWidth: false,
                 searching: false,

                 destroy: true,
                 lengthChange: false,
                 "oLanguage": {
                     "oPaginate": { "sPrevious": '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-arrow-left"><line x1="19" y1="12" x2="5" y2="12"></line><polyline points="12 19 5 12 12 5"></polyline></svg>', "sNext": '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-arrow-right"><line x1="5" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></svg>' },
                     "sInfo": "Showing page _PAGE_ of _PAGES_",
                     "sSearch": false,
                     "sLengthMenu": "Results :  _MENU_",
                 },
                 "scrollX": false,
                 "language": {
                     "zeroRecords": "No data found.",
                     "decimal": ",",
                     "thousands": "."
                 },
                 ajax: {
                     url: '@Url.Action("SearchTeam", "ReportTeam")',
                     type: "POST",
                     async: false,
                     datatype: "JSON",
                     data: function (d) {
                         d.teamcode = $("#txtteamcode").val(),
                         d.vendorcode = $("#txtvendorcode").val(),
                             d.locationcode = $("#txtlocationcode").val(),
                             d.createFrom = $("#dtcrtFrom").val(),
                             d.createTo = $("#dtcrtTo").val()

                     }
                 },
                 columns: [




                     { data: "TeamCode" },
                     { data: "TeamName" },
                     { data: "TeamNameTh" },
                     { data: "TeamNameEn" },
                     { data: "ShipTo" },
                     { data: "StageLocal" },
                     { data: "OosStorageLocation" },
                     { data: "LocationCode" },
                     { data: "VendorCode" },
                     { data: "JobType" },
                     { data: "SubcontractType" },
                     { data: "SubcontractSubType" },
                     { data: "WarrantyMa" },
                     { data: "WarrantyInstall" },
                     { data: "ServiceSkill" },
                     { data: "InstallationsContractPhone" },
                     { data: "MaintenanceContractPhone" },
                     { data: "EtcContractPhone" },
                     { data: "InstallationsContractEmail" },
                     { data: "MaintenanceContractEmail" },
                     { data: "EtcContractEmail" },

                     { data: "Status" },
                     { data: "CreateDate" },
                     { data: "CreateBy" },
                     { data: "UpdateDate" },
                     { data: "UpdateBy" }
                 ],
                 "order": [[0, "desc"]],
                 "stripeClasses": [],
                 "initComplete": function (settings, json) {


                 },
                 drawCallback: function () { $('.dataTables_paginate > .pagination').addClass(' pagination-style-13 pagination-bordered mb-5'); }

             });

         }


        function clearField() {

            $("#txtteamcode").val('');
            $("#txtvendorcode").val('');
            $("#txtlocationcode").val('');

            $("#dtcrtFrom").val('');
            $("#dtcrtTo").val('');
            onLoadDataTeam();
        }

    </script>

}