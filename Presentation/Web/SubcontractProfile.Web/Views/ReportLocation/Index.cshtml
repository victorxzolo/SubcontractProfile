                     { data: "BankBranchCode" },
                     { data: "BankBranchName" },
                     { data: "PenaltyContractPhone" },
                     { data: "PenaltyContractMail" },
                     { data: "ContractPhone" },
                     { data: "ContractMail" }

                 ],
                 "order": [[0, "desc"]],
                 "stripeClasses": [],
                 "initComplete": function (settings, json) {


                 },
                 drawCallback: function () { $('.dataTables_paginate > .pagination').addClass(' pagination-style-13 pagination-bordered mb-5'); }

