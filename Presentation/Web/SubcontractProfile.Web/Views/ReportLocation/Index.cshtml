@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "ReportLocation";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
    <div id="pageID" style="display:none;">ReportLocation</div>
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 layout-spacing">
        <div class="skills layout-spacing">

         
            <div class="widget-content widget-content-area">
                <h3 class="">@Localizer["ReportLocation"]</h3>

                <div class="widget-content1">
                    <div class="form-row mb-4">

                        <div class="form-group col-md-6">
                            <label for="txtlocationcode">@Localizer["LocationCode"]</label>
                            <input type="text" class="form-control" id="txtlocationcode" onchange="return isNumberKey(event);"  onkeypress="return isNumberKey(event);" />
                        </div>


                        <div class="form-group col-md-6">
                            <label for="txtvendorcode">@Localizer["VendorCode"]</label>
                            <input type="text" class="form-control" id="txtvendorcode" onchange="return isNumberKey(event);"  onkeypress="return isNumberKey(event);" />
                        </div>



                        <div class="form-group col-md-6">
                            <label for="createFrom">@Localizer["CreateDateFrom"]</label>
                            <div class='input-group p-0 date' id='dtcreateFrom'>
                                <input type='text' class="form-control" id="dtcrtFrom" />
                                <div class="input-group-append input-group-addon">
                                    <span class="input-group-text px-4">
                                        <i class="fa fa-calendar"></i>
                                    </span>
                                </div>

                            </div>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="creatTo">@Localizer["CreateDateTo"]</label>
                            <div class='input-group p-0 date' id='dtcreateTo'>
                                <input type='text' class="form-control" id="dtcrtTo" />
                                <div class="input-group-append input-group-addon">
                                    <span class="input-group-text px-4">
                                        <i class="fa fa-calendar"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div style="text-align:center">

                        <button id="btnclear" type="button" onclick="clearField();" class="btn btn-dark mb-2">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                                 stroke-linecap="round" stroke-linejoin="round" class="feather feather-x-circle">
                                <circle cx="12" cy="12" r="10"></circle>
                                <line x1="15" y1="9" x2="9" y2="15"></line>
                                <line x1="9" y1="9" x2="15" y2="15"></line>
                            </svg> @Localizer["Reset"]
                        </button>
                        <button id="btnSearch" type="button" onclick="onLoadDataLocation();" class="btn btn-success mb-2">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                                 stroke-linecap="round" stroke-linejoin="round" class="feather feather-search">
                                <circle cx="11" cy="11" r="8"></circle>
                                <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
                            </svg> @Localizer["Search"]
                        </button>

                    </div>
            
                </div>

                <br />
                <div class="widget-heading">
                    <h3 class=""> @Localizer["SearchLocationResult"]</h3>

                </div>
                <div class="table-responsive mb-4 mt-4">
                    <table id="tbSearchLocationResult" class="table table-hover" style="width:100%">
                        <thead>
                            <tr>
                                <th>@Localizer["LocationCode"]</th>
                                <th>@Localizer["LocationName"]</th>
                                <th>@Localizer["LocationNameTh"]</th>
                                <th>@Localizer["LocationNameEn"]</th>
                                <th>@Localizer["LocationNameAlias"]</th>
                                <th>@Localizer["VendorCode"]</th>
                                <th>@Localizer["StorageLocation"]</th>
                                <th>@Localizer["ShipTo"]</th>
                                <th>@Localizer["OutOfServiceStorageLocation"]</th>
                                <th>@Localizer["SubPhase"]</th>
                                <th>@Localizer["EffectiveDate"]</th>
                                <th>@Localizer["ShopType"]</th>
                                <th>@Localizer["VatBranchNumber"]</th>
                                <th>@Localizer["Phone"]</th>
                                <th>@Localizer["CompanyMainContractPhone"]</th>
                                <th>@Localizer["InstallationsContractPhone"]</th>
                                <th>@Localizer["MaintenanceContractPhone"]</th>
                                <th>@Localizer["InventoryContractPhone"]</th>
                                <th>@Localizer["PaymentContractPhone"]</th>
                                <th>@Localizer["EtcContractPhone"]</th>
                                <th>@Localizer["CompanyGroupMail"]</th>
                                <th>@Localizer["InstallationsContractMail"]</th>
                                <th>@Localizer["MaintenanceContractMail"]</th>
                                <th>@Localizer["InventoryContractMail"]</th>
                                <th>@Localizer["PaymentContractMail"]</th>
                                <th>@Localizer["EtcContractMail"]</th>
                                <th>@Localizer["LocationAddress"]</th>
                                <th>@Localizer["PostAddress"]</th>
                                <th>@Localizer["TaxAddress"]</th>
                                <th>@Localizer["WtAddress"]</th>
                                <th>@Localizer["HouseNo"]</th>
                                <th>@Localizer["AreaCode"]</th>
                                <th>@Localizer["BankCode"]</th>
                                <th>@Localizer["BankName"]</th>
                                <th>@Localizer["BankAccountNo"]</th>
                                <th>@Localizer["BankAccountName"]</th>
                                <th>@Localizer["BankAttachFile"]</th>
                                <th>@Localizer["Status"]</th>
                                <th>@Localizer["CreateDate"]</th>
                                <th>@Localizer["CreateBy"]</th>
                                <th>@Localizer["UpdateBy"]</th>
                                <th>@Localizer["UpdateDate"]</th>
                                <th>@Localizer["BankBranchCode"]</th>
                                <th>@Localizer["BankBranchName"]</th>
                                <th>@Localizer["PenaltyContractPhone"]</th>
                                <th>@Localizer["PenaltyContractMail"]</th>
                                <th>@Localizer["ContractPhone"]</th>
                                <th>@Localizer["ContractMail"]</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>

    </div>



@section scripts{

    <script type="text/javascript">
        var oTable;
        var oTableLocation;
        var _loctioncode = $("#txtlocationcode").val();
        var _vendorcode = $("#txtvendorcode").val();
