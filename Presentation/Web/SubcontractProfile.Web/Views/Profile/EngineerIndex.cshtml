@{
    //ViewData["Title"] = "CompanyIndex";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
<div class="form-group my-4">
    <div class="card-header bg-white">
        <p class="font-weight-bolder lead">Search Engineer</p>
    </div>
</div>
<div class="col-md-12 col-sm-12 col-xl-12 col-lg-12">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xl-12 col-lg-12">
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label text-left">Register Type :</label>
                        <div class="col-sm-3">
                            <div class="form-check">
                                <label class="form-check-label">
                                    <input type="radio" class="form-check-input" name="optionsRadios" id="chktype" value="D">
                                    New Subcontract
                                </label>
                            </div>
                        </div>
                        <div class="col-sm-7">
                            <div class="form-check">
                                <label class="form-check-label">
                                    <input type="radio" class="form-check-input" name="optionsRadios" id="chktype" value="D">
                                    Dealer
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 col-sm-6 col-xl-6 col-lg-6">
                    <div class="form-group row">
                        <label class="col-sm-4 col-md-4 col-lg-4 col-xl-4 col-form-label text-left">Location Code :</label>
                        <div class="col-sm-8 col-md-8 col-lg-8 col-xl-8">
                            <select class="form-control form-control-sm" id="ddlLocationCode">
                                <option>Location1</option>
                            </select>
                        </div>

                    </div>
                </div>
                <div class="col-md-6 col-sm-6 col-xl-6 col-lg-6">
                    <div class="form-group row">
                        <label class="col-sm-4 col-md-4 col-lg-4 col-xl-4 col-form-label text-left">Team Name :</label>
                        <div class="col-sm-8 col-md-8 col-lg-8 col-xl-8">
                            <select class="form-control form-control-sm" id="ddlTeamName">
                                <option>Location1</option>
                            </select>
                        </div>

                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 col-sm-6 col-xl-6 col-lg-6">
                    <div class="form-group row">
                        <label class="col-sm-4 col-md-4 col-lg-4 col-xl-4 col-form-label text-left">Staff Name :</label>
                        <div class="col-sm-8 col-md-8 col-lg-8 col-xl-8">
                            <input type="text" class="form-control form-control-sm" id="txtStaffName" />
                        </div>

                    </div>
                </div>
                <div class="col-md-6 col-sm-6 col-xl-6 col-lg-6">
                    <div class="form-group row">
                        <label class="col-sm-4 col-md-4 col-lg-4 col-xl-4 col-form-label text-left">Citizen ID :</label>
                        <div class="col-sm-8 col-md-8 col-lg-8 col-xl-8">
                            <input type="text" class="form-control form-control-sm" id="txtCitizenID" />
                        </div>

                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 col-sm-6 col-xl-6 col-lg-6">
                    <div class="form-group row">
                        <label class="col-sm-4 col-md-4 col-lg-4 col-xl-4 col-form-label text-left">Position :</label>
                        <div class="col-sm-8 col-md-8 col-lg-8 col-xl-8">
                            <select class="form-control form-control-sm" id="ddlPosition">
                                <option>Position1</option>
                                <option>Position2</option>
                            </select>
                        </div>
                    </div>

                </div>
            </div>


            <div class="row">
                <div class="col-md-12 col-sm-12 col-xl-12 col-lg-12">
                    <div class="d-flex align-items-center justify-content-center h-100" role="group">
                        @*<button class="btn btn-secondary mr-2" id="btnclear" type="button">Clear</button>
                            <button class="btn btn-success" id="btnSearch" type="button">Search</button>*@
                        <button class="btn-border btn-black mr-2" type="button" id="btnclear">
                            <i class="fa fa-refresh icon"></i><span>Clear</span>
                        </button>
                        <button class="btn-border btn-green" type="button" id="btnSearch" onclick="getAllEngineer()">
                            <i class="fa fa-search icon"></i><span>Search</span>
                        </button>
                    </div>

                </div>

            </div>
            <br />
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xl-12 col-lg-12">
                    <div class="d-flex align-items-center justify-content-center h-100 float-right" role="group">
                        <button class="btn-border btn-black mr-2 float-right" type="button" id="btnDelete">
                            <i class="fa fa-trash-o icon"></i><span>Delete</span>
                        </button>
                        @*<button class="btn-border btn-green float-right" type="button" id="btnNewcompany"
                                    onclick="location.href='@Url.Action("CompanyVerify", "Registration" ,new {id=1 })'">
                                <i class="fa fa-check icon"></i><span>New Company</span>
                            </button>*@
                        <button class="btn-border btn-green float-right" type="button" id="btnNewEngineer"
                                onclick="location.href='@Url.Action("_PartialCompany", "Profile")'">
                            <i class="fa fa-check icon"></i><span>New Engineer</span>
                        </button>
                    </div>

                </div>

            </div>

            <div class="row">
                <div class="col-md-12 col-sm-12 col-xl-12 col-lg-12">
                    <p class="font-weight-bolder lead">
                        Search Result
                    </p>
                    <hr />
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xl-12 col-lg-12">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover">
                            <thead class="thead-light">
                                <tr>
                                    <th>Select</th>
                                    <th>Status</th>
                                    <th>Register Type</th>
                                    <th>Tax ID</th>
                                    <th>Company Name (TH)</th>
                                    <th>Cpmpaby Name (EN)</th>
                                    <th>Vender Code</th>
                                    <th>Distribution Channel</th>
                                    <th>Channel Sale Group</th>
                                    <th>Register Date</th>
                                    <th>Verify Date</th>
                                    <th>Verify By</th>

                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="text-center">

                                        <input type="radio" class="form-check-input position-static" name="optionsRadios" id="chktype" value="1" checked>

                                    </td>
                                    <td>Waiting</td>
                                    <td>New Sub</td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <td class="text-center">

                                        <input type="radio" class="form-check-input position-static" name="optionsRadios" id="chktype" value="2" checked>

                                    </td>
                                    <td>Approve</td>
                                    <td>Dealer</td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xl-12 col-lg-12">
                    <nav aria-label="...">
                        <ul class="pagination">
                            <li class="page-item">
                                <span class="page-link">Previous</span>
                            </li>
                            <li class="page-item"><a class="page-link" href="#">1</a></li>
                            <li class="page-item active">
                                <span class="page-link">
                                    2
                                    <span class="sr-only">(current)</span>
                                </span>
                            </li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item">
                                <a class="page-link" href="#">Next</a>
                            </li>
                        </ul>
                    </nav>
                </div>

            </div>




        </div>
    </div>
</div>






