<style>
    .form-control {
        display: block;
        width: 100%;
        height: 34px;
        padding: 6px 12px;
        font-size: 14px;
        line-height: 1.42857143;
        color: #555;
        background-color: #fff;
        background-image: none;
        border: 1px solid #ccc;
        border-radius: 0;
        -webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,.075);
        box-shadow: inset 0 1px 1px rgba(0,0,0,.075);
        -webkit-transition: border-color ease-in-out .15s,-webkit-box-shadow ease-in-out .15s;
        -o-transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
        transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
    }

    .btn-default {
        color: #8DC63F; /*before color #74a333*/
        background-color: #DDE1E4;
        border-color: #ccc;
    }
</style>

<body>
    <h3>Search Location</h3>
    <hr style="height:2px;border-width:0;color:gray;background-color:gray">
    <div class="container">
        <div class="row">
            <div class="col-sm-2">
                <label>Register Type</label>
            </div>
            <div class="col-sm-10">
                <input type="radio" id="1" name="type" value="new">
                <label for="new">New Subcontract</label>&nbsp;&nbsp;
                <input type="radio" id="2" name="type" value="deal">
                <label for="deal">Dealer</label>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-sm-2">
                <label>Location Code :</label>
            </div>
            <div class="col-sm-4">
                <select id="location" name="location" style="width:300px">
                </select>
            </div>
            <div class="col-sm-2">
                <label>Vender Code :</label>
            </div>
            <div class="col-sm-4">
                <input type="text" id="VenderCode" style="width:300px" class="form-control">
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-sm-2">
                <label>Location Name alias:</label>
            </div>
            <div class="col-sm-10">
                <input type="text" id="locationAlias" style="width:300px" class="form-control">
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-sm-2">
                <label>Location Name(TH) :</label>
            </div>
            <div class="col-sm-4">
                <input type="text" id="LocationNameT" style="width:300px" class="form-control">
            </div>
            <div class="col-sm-2">
                <label>Location Name(EH) :</label>
            </div>
            <div class="col-sm-4">
                <input type="text" id="LocationNameE" style="width:300px" class="form-control">
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-sm-2">
                <label>Storage Location :</label>
            </div>
            <div class="col-sm-4">
                <input type="text" id="Storage" style="width:300px" class="form-control">
            </div>
            <div class="col-sm-2">
                <label>Phone No :</label>
            </div>
            <div class="col-sm-4">
                <input type="text" id="Phone" style="width:300px" class="form-control">
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-sm-6" style="text-align:right; ">
                <input type="button" id="btnClear" value="Clear" width="100" class="btn btn-default" />
            </div>
            <div class="col-sm-6">
                <input type="button" id="btnSearch" value="Search" width="100" class="btn btn-default" />
            </div>
        </div>
    </div>
    <br />

    <div class="row" style="margin-left:5px;">
        <h3>Search Result</h3>
        <input type="button" id="btnDel" value="Delete" width="100" class="btn btn-default" style="position: absolute; right: 170px;" />
        <input type="button" id="btnNew" value="New Location" width="100" class="btn btn-default" style="position: absolute; right: 10px;" />
    </div>
    <hr style="height:1px;border-width:0;color:gray;background-color:gray">
    <br />
    <table align="center" width="100%" border="1">
        <tr style="line-height: 20px; background-color:lightgray;">
            <td style="vertical-align: central;" width="5%" align="center">
                <input id="Checkbox1" type="checkbox" />
            </td>
            <td width="5%">
                <label>Edit</label>
            </td>
            <td width="10%">
                <label>Register Type</label>
            </td>
            <td width="10%">
                <label>Location Code</label>
            </td>
            <td width="10%">
                <label>Location Name(EH)</label>
            </td>
            <td width="10%">
                <label>Location Name(EN)</label>
            </td>
            <td width="10%">
                <label>Location Name Alias</label>
            </td>
            <td width="10%">
                <label>Storage Location</label>
            </td>
            <td width="25%">
                <label>Address</label>
            </td>
            <td width="15%">
                <label>Phone No</label>
            </td>
        </tr>
    </table>


</body>
