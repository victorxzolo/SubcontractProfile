

@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.Title = "Company Verify";

}
<div id="pageID" style="display:none;">CompanyVerify</div>


<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 layout-spacing">
    <div class="skills layout-spacing">

        <div id="controllername" data-url="@Url.Action("Action", "Registration")"></div>

        <div class="widget-content widget-content-area">
            <h3 class="">@Localizer["SearchCompanyVerify"]</h3>

            <div class="widget-content1">
                <div class="form-row mb-4">
                    <div class="form-group col-md-12">
                        <label for="inputEmail4">@Localizer["RegisterType"]</label> <br />

                        <div class="n-chk">
                            <label class="new-control new-checkbox new-checkbox-rounded new-checkbox-text checkbox-outline-success">
                                <input id="rdoCustomerTypeAll" type="radio" class="new-control-input" name="customRadioSucRegis" value="ALL" checked>
                                <span class="new-control-indicator"></span><span class="new-chk-content">@Localizer["ALL"]</span>
                            </label>

                            <label class="new-control new-checkbox new-checkbox-rounded new-checkbox-text checkbox-outline-success">
                                <input id="rdoCustomerTypeSub" type="radio" class="new-control-input" name="customRadioSucRegis" value="NewSubContract">
                                <span class="new-control-indicator"></span><span class="new-chk-content">New Subcontract</span>
                            </label>

                            <label class="new-control new-checkbox new-checkbox-rounded new-checkbox-text checkbox-outline-success">
                                <input id="rdoCustomerTypeDealer" type="radio" class="new-control-input" name="customRadioSucRegis" value="Dealer">
                                <span class="new-control-indicator"></span><span class="new-chk-content">Dealer</span>
                            </label>
                        </div>

                    </div>


                    <div class="form-group col-md-6">
                        <label for="txtcompanyname">@Localizer["CompanyNameThai"]</label>
                        <input type="text" class="form-control" id="txtcompanyname" />
                    </div>

                    <div class="form-group col-md-6">
                        <label for="txttaxid">@Localizer["TaxID"]</label>
                        <input type="text" class="form-control" id="txttaxid" maxlength="13" />
                    </div>


                    @*<div class="form-group col-md-6">
                            <label for="ddldistribution">Distribution Channel</label>
                            <select class="form-control" id="ddldistribution">
                                <option value="">Select Distribution Channel</option>
                                <option>Channel1</option>
                                <option>Channel2</option>
                                <option>Channel3</option>
                                <option>Channel4</option>
                            </select>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="ddlchannelsalegroup">Channel Sale Group</label>
                            <select class="form-control" id="ddlchannelsalegroup">
                                <option value="">Select Channel Sale Group</option>
                                <option>Group1</option>
                                <option>Group2</option>
                                <option>Group3</option>
                                <option>Group4</option>
                            </select>
                        </div>*@

                    <div class="form-group col-md-6">
                        <label for="txtcompanyname">@Localizer["RegisterDate"]</label>
                        <div class='input-group p-0 date' id='regisdatefrom'>
                            <input type='text' class="form-control" id="dateregisfrom" />
                            <div class="input-group-append input-group-addon">
                                <span class="input-group-text px-4">
                                    <i class="fa fa-calendar"></i>
                                </span>
                            </div>

                        </div>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="txtcompanyname">@Localizer["ToDate"]</label>
                        <div class='input-group p-0 date' id='regisdateto'>
                            <input type='text' class="form-control" id="dateregisto" />
                            <div class="input-group-append input-group-addon">
                                <span class="input-group-text px-4">
                                    <i class="fa fa-calendar"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="txtvendercode">@Localizer["VenderCode"]</label>
                        <input type="text" class="form-control" id="txtvendercode" />
                    </div>
                    <div class="form-group col-md-6">
                        <label for="ddlStatus">@Localizer["Status"]</label>
                        <select class="form-control" id="ddlStatus">
                        </select>
                    </div>

                </div>
                <div style="text-align:center">

                    <button id="btnclear" type="button" class="btn btn-dark mb-2">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                             stroke-linecap="round" stroke-linejoin="round" class="feather feather-x-circle">
                            <circle cx="12" cy="12" r="10"></circle>
                            <line x1="15" y1="9" x2="9" y2="15"></line>
                            <line x1="9" y1="9" x2="15" y2="15"></line>
                        </svg> @Localizer["Reset"]
                    </button>
                    <button id="btnSearch" type="button" class="btn btn-success mb-2">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                             stroke-linecap="round" stroke-linejoin="round" class="feather feather-search">
                            <circle cx="11" cy="11" r="8"></circle>
                            <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
                        </svg> @Localizer["Search"]
                    </button>

                </div>
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xl-12 col-lg-12">
                        <div class="" role="group">
                            <button class="btn btn-success float-right" type="button" id="btnverifycompany">
                                @*onclick="location.href='@Url.Action("CompanyVerify", "Registration" ,new {id=1 })'">*@
                                <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" aria-hidden="true" focusable="false" width="1em" height="1em"
                                     style="-ms-transform: rotate(360deg); -webkit-transform: rotate(360deg); transform: rotate(360deg);" preserveAspectRatio="xMidYMid meet"
                                     viewBox="0 0 512 512">
                                    <path fill="white" d="M199.066 456l-7.379-7.514l-3.94-3.9l-86.2-86.2l.053-.055l-83.664-83.666l97.614-97.613l83.565 83.565L398.388 61.344L496 158.958L296.729 358.229l-11.26 11.371zM146.6 358.183l52.459 52.46l.1-.1l.054.054l52.311-52.311l11.259-11.368l187.963-187.96l-52.358-52.358l-199.273 199.271l-83.565-83.565l-52.359 52.359l83.464 83.463z" />
                                </svg> @Localizer["VerifyCompany"]
                            </button>
                        </div>

                    </div>

                </div>
            </div>

            <br />
            <div class="widget-heading">
                <h3 class=""> @Localizer["SearchResult"]</h3>

            </div>
            <div class="table-responsive mb-4 mt-4">
                <table id="tbSearchComVerifyResult" class="table table-hover" style="width:100%">
                    <thead>
                        <tr>
                            <th style="width:30px">@Localizer["Select"]</th>
                            <th></th>
                            <th>@Localizer["Status"]</th>
                            <th>@Localizer["RegisterType"]</th>
                            <th>@Localizer["TaxID"]</th>
                            <th>@Localizer["CompanyNameThai"]</th>
                            <th>@Localizer["CompanyNameEng"]</th>
                            <th>@Localizer["VenderCode"]</th>
                            <th>@Localizer["RegisterDate"]</th>
                            <th>@Localizer["VerifyDate"]</th>
                            @*<th >ตรวจสอบโดย</th>*@
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>

</div>






@section scripts
{
    <script>
var localizedData = {
    'ErrorSelectCompany': '@Localizer["ErrorSelectCompany"]',
    'MessageAutocomplete':'@Localizer["MessageAutocomplete"]'
}
    </script>
    <script src="~/Scripts/View/SearchCompanyVerify.js"></script>

}
