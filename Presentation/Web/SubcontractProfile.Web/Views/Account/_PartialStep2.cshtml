

@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer
<div class="row my-3">
    <div class="col-md-12 col-sm-12 col-xl-12 col-lg-12">
        <p class="font-weight-bolder lead">
            @Localizer["CompanyAddressInformation"]
        </p>
        <hr />
    </div>
</div>
<div class="row">
    <label class="col-sm-2 col-md-2 col-lg-2 col-xl-2 col-form-label text-center">@Localizer["AddressType"]</label>
</div>

<div class="needs-validation-step2" novalidate>
    <div id="chkAddressType">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xl-12 col-lg-12">
                <div class="form-group row">
                    <div class="col-sm-1 col-md-1 col-lg-1 col-xl-1"></div>
                    <div class="col-sm-3 col-md-3 col-lg-3 col-xl-3">
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" name="address_type_id" id="chkaddrbranch" value="01" required>
                            <label class="custom-control-label" for="chkaddrbranch"></label>
                        </div>
                    </div>
                    <div class="col-sm-3 col-md-3 col-lg-3 col-xl-3">
                        <div class="custom-control custom-checkbox">

                            <input type="checkbox" class="custom-control-input" name="address_type_id" id="chkaddrtax" value="06" required>
                            <label class="custom-control-label" for="chkaddrtax"></label>
                        </div>
                    </div>
                    <div class="col-sm-3 col-md-3 col-lg-3 col-xl-3">
                        <div class="custom-control custom-checkbox">

                            <input type="checkbox" class="custom-control-input" name="address_type_id" id="chkaddrwt" value="04" required>
                            <label class="custom-control-label" for="chkaddrwt"></label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xl-12 col-lg-12">
                <div class="form-group row">
                    <div class="col-sm-1 col-md-1 col-lg-1 col-xl-1"></div>
                    <div class="col-sm-3 col-md-3 col-lg-3 col-xl-3">
                        <div class="custom-control custom-checkbox">

                            <input type="checkbox" class="custom-control-input" name="address_type_id" id="chkaddrdoc" value="02" required>
                            <label class="custom-control-label" for="chkaddrdoc"></label>
                        </div>
                    </div>
                    <div class="col-sm-3 col-md-3 col-lg-3 col-xl-3">
                        <div class="custom-control custom-checkbox">

                            <input type="checkbox" class="custom-control-input" name="address_type_id" id="chkaddrshipping" value="03" required>
                            <label class="custom-control-label" for="chkaddrshipping"></label>
                        </div>
                    </div>
                    <div class="col-sm-3 col-md-3 col-lg-3 col-xl-3">
                        <div class="custom-control custom-checkbox">

                            <input type="checkbox" class="custom-control-input" name="address_type_id" id="chkaddrpop" value="05" required>
                            <label class="custom-control-label" for="chkaddrpop"></label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="invalid-tooltip">@Localizer["ErrorAddressType"]</div>
        </div>

    </div>

    <div class="row">
        <div class="col-md-6 col-sm-6 col-xl-6 col-lg-6">
            <div class="form-group row">
                <label class="col-sm-3 col-md-3 col-lg-3 col-xl-3 col-form-label text-right">@Localizer["HouseNo"] :</label>
                <div class="col-sm-4 col-md-4 col-lg-4 col-xl-4">
                    <input type="text" class="form-control inputValidationAddress form-control-sm" id="txthomenumber" required />
                    <div class="invalid-tooltip">
                        @Localizer["ErrorHouseNo"]
                    </div>
                </div>
                <label class="col-sm-2 col-md-2 col-lg-2 col-xl-2 col-form-label text-center">@Localizer["Moo"] :</label>
                <div class="col-sm-2 col-md-2 col-lg-2 col-xl-2">
                    <input type="text" class="form-control form-control-sm" id="txtVillageNo" />
                    <div class="invalid-tooltip">
                        Please provide a valid moo.
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-sm-6 col-xl-6 col-lg-6">
            <div class="form-group row">
                <label class="col-sm-3 col-md-3 col-lg-3 col-xl-3 col-form-label text-right">@Localizer["Village"] :</label>
                <div class="col-sm-8 col-md-8 col-lg-8 col-xl-8">
                    <input type="text" class="form-control form-control-sm" id="txtvillage" />
                    <div class="invalid-tooltip">
                        Please provide a valid village name.
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 col-sm-6 col-xl-6 col-lg-6">
            <div class="form-group row">
                <label class="col-sm-3 col-md-3 col-lg-3 col-xl-3 col-form-label text-right">@Localizer["Building"] :</label>
                <div class="col-sm-8 col-md-8 col-lg-8 col-xl-8">
                    <input type="text" class="form-control form-control-sm" id="txtbuilding" />
                </div>
            </div>
        </div>
        <div class="col-md-6 col-sm-6 col-xl-6 col-lg-6">
            <div class="form-group row">
                <label class="col-sm-3 col-md-3 col-lg-3 col-xl-3 col-form-label text-right">@Localizer["Floor"] :</label>
                <div class="col-sm-3 col-md-3 col-lg-3 col-xl-3">
                    <input type="text" class="form-control form-control-sm" id="txtfloor" />
                </div>
                <label class="col-sm-2 col-md-2 col-lg-2 col-xl-2 col-form-label text-center">@Localizer["Room"] :</label>
                <div class="col-sm-3 col-md-3 col-lg-3 col-xl-3">
                    <input type="text" class="form-control form-control-sm" id="txtroom" />
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 col-sm-6 col-xl-6 col-lg-6">
            <div class="form-group row">
                <label class="col-sm-3 col-md-3 col-lg-3 col-xl-3 col-form-label text-right">@Localizer["Soi"] :</label>
                <div class="col-sm-8 col-md-8 col-lg-8 col-xl-8">
                    <input type="text" class="form-control form-control-sm" id="txtsoi" />
                </div>
            </div>
        </div>
        <div class="col-md-6 col-sm-6 col-xl-6 col-lg-6">
            <div class="form-group row">
                <label class="col-sm-3 col-md-3 col-lg-3 col-xl-3 col-form-label text-right">@Localizer["Street"]  :</label>
                <div class="col-sm-8 col-md-8 col-lg-8 col-xl-8">
                    <input type="text" class="form-control form-control-sm" id="txtroad" />
                </div>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-md-6 col-sm-6 col-xl-6 col-lg-6">
            <div class="form-group row">
                <label class="col-sm-3 col-md-3 col-lg-3 col-xl-3 col-form-label text-right">@Localizer["Country"] :<span style="color:red">*</span></label>
                <div class="col-sm-8 col-md-8 col-lg-8 col-xl-8">
                    <select class="custom-select inputValidationAddress custom-select-sm" id="ddlcountry" required>
                        <option value="">@Localizer["ddlSelect"]</option>
                        <option value="THA">@Localizer["Thailand"]</option>
                    </select>
                    <div class="invalid-tooltip">@Localizer["ErrorCountry"]</div>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-sm-6 col-xl-6 col-lg-6">
            <div class="form-group row">
                <label class="col-sm-3 col-md-3 col-lg-3 col-xl-3 col-form-label text-right">@Localizer["Zone"] :<span style="color:red">*</span></label>
                <div class="col-sm-8 col-md-8 col-lg-8 col-xl-8">
                    <select class="custom-select inputValidationAddress custom-select-sm" id="ddlzone" required>
                        <option></option>
                    </select>
                    <div class="invalid-tooltip">
                        @Localizer["ErrorZone"]
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 col-sm-6 col-xl-6 col-lg-6">
            <div class="form-group row">
                <label class="col-sm-3 col-md-3 col-lg-3 col-xl-3 col-form-label text-right">@Localizer["Province"] :<span style="color:red">*</span></label>
                <div class="col-sm-8 col-md-8 col-lg-8 col-xl-8">
                    <select class="custom-select inputValidationAddress custom-select-sm" id="ddlprovince" required>
                    </select>
                    <div class="invalid-tooltip">
                        @Localizer["ErrorProvince"]
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-sm-6 col-xl-6 col-lg-6">
            <div class="form-group row">
                <label class="col-sm-3 col-md-3 col-lg-3 col-xl-3 col-form-label text-right">@Localizer["District"] :<span style="color:red">*</span></label>
                <div class="col-sm-8 col-md-8 col-lg-8 col-xl-8">
                    <select class="custom-select inputValidationAddress custom-select-sm" id="ddldistrict" required>
                    </select>
                    <div class="invalid-tooltip">
                        @Localizer["ErrorDistrict"]
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 col-sm-6 col-xl-6 col-lg-6">
            <div class="form-group row">
                <label class="col-sm-3 col-md-3 col-lg-3 col-xl-3 col-form-label text-right">@Localizer["SubDistrict"] :<span style="color:red">*</span></label>
                <div class="col-sm-8 col-md-8 col-lg-8 col-xl-8">
                    <select class="custom-select inputValidationAddress custom-select-sm" id="ddlsubdistrict" required>
                    </select>
                    <div class="invalid-tooltip">
                        @Localizer["ErrorSubdistrict"]
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-sm-6 col-xl-6 col-lg-6">
            <div class="form-group row">
                <label class="col-sm-3 col-md-3 col-lg-3 col-xl-3 col-form-label text-right">@Localizer["Zipcode"] :<span style="color:red">*</span></label>
                <div class="col-sm-8 col-md-8 col-lg-8 col-xl-8">
                    <select class="custom-select inputValidationAddress custom-select-sm" id="ddlzipcode" required>
                    </select>
                    <div class="invalid-tooltip">@Localizer["ErrorZipcode"]</div>
                </div>

            </div>

        </div>
    </div>

</div>
<div class="row">
    <div class="col-md-12 col-sm-12 col-xl-12 col-lg-12">
        <div class="d-flex align-items-center justify-content-center h-100" role="group">
            <button class="btn-border btn-black mr-2" id="btnresetaddress" type="button">
                <i class="fa fa-refresh icon"></i><span>@Localizer["Reset"]</span>
            </button>
            <button class="btn-border btn-green" id="btnaddaddress" type="button">
                <i class="fa fa-plus-circle icon"></i><span>@Localizer["AddAddress"]</span>
            </button>
        </div>

    </div>

</div>

<div class="row needs-validation-step2-table" novalidate>
    <div class="col-md-12 col-sm-12 col-xl-12 col-lg-12">
        <div class="table-responsive pt-3" style="overflow-y:hidden;">
            <table class="table table-bordered table-hover inputValidationAddress" id="tbaddressstep2" width="100%" required>
                <thead class="thead-light">
                    <tr>
                        <th width="0%"></th>
                        <th width="0%"></th>
                        <th width="30%">@Localizer["AddressType"]</th>
                        <th width="50%">@Localizer["Address"]</th>
                        <th width="10%"></th>
                        <th width="10%"></th>

                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>