@{
Layout = "~/Views/Shared/_LayoutLogin.cshtml";

}
<style>
    .hr-sect {
        display: flex;
        flex-basis: 100%;
        align-items: center;
        color: rgba(0, 0, 0, 0.35);
        margin: 8px 0px;
    }

        .hr-sect::before,
        .hr-sect::after {
            content: "";
            flex-grow: 1;
            background: rgba(0, 0, 0, 0.35);
            height: 1px;
            font-size: 0px;
            line-height: 0px;
            margin: 0px 8px;
        }
</style>
<div class="login-container">
    <div class="row justify-content-center">
        <div class="grid-margin stretch-card col-md-6 ">

            <div class="card shadow p-3 mb-5 bg-white rounded">
                <div class="card-header bg-white">
                    <img src="~/img/ais.png" style="height:39px;width:104px;" class="mr-2" alt="logo" />
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 col-sm-6 col-xl-6 col-lg-6">
                            <p class="font-weight-bolder lead">Sign in</p>
                        </div>
                        <div class="col-md-6 col-sm-6 col-xl-6 col-lg-6" align="right">
                            <div class="form-group">
                                <a href="#" class="font-weight-bolder lead">Forget Password?</a>
                            </div>
                        </div>
                    </div>
                    @*<div style="display:none" class="alert alert-danger alert-dismissible fade show" role="alert" id="idmsAlert">
            <p>กรุณาระบุข้อมูลให้ครบถ้วน</p>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>*@

                    <div class="alert alert-danger toast" data-autohide="false" id="idmsAlert">
                        <div class="alert-danger">
                            <strong class="mr-auto text-primary"></strong>
                            <button type="button" class="ml-2 mb-1 close" data-dismiss="toast">&times;</button>
                        </div>
                        <div class="toast-body">
                            <strong>กรุณาระบุข้อมูลให้ครบถ้วน</strong>
                        </div>
                    </div>

                    <div id="formValidation">
                        <div class="row">
                            <div class="col-md-12 col-sm-12 col-xl-12 col-lg-12">
                                <div class="form-group">
                                    <input type="text" id="txtusername" class="form-control inputValidation" placeholder="User ID" value="" maxlength="50" />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 col-sm-12 col-xl-12 col-lg-12">
                                <div class="form-group">
                                    <div class="input-group p-0 ">
                                        <input type="password" id="txtpassword" class="form-control inputValidation" name="password" autocomplete="new-password" placeholder="Password" maxlength="50">
                                        @*<div class="input-group-append input-group-addon ">
                                <span class="input-group-text px-4 toggle-password"><i class="fa fa-eye-slash"></i></span>
                            </div>*@


                                    </div>
                                </div>

                            </div>

                        </div>
                        <div class="row">

                            <div class="col-md-12 col-sm-12 col-xl-12 col-lg-12">
                                <div class="form-group">
                                    <select class="form-control" id="ddlLanguage">
                                        <option value="">Select Language</option>
                                        <option value="1">Thai</option>
                                        <option value="2">English</option>
                                    </select>
                                </div>
                            </div>


                        </div>
                        <div class="row">
                            <div class="col-md-12 col-sm-12 col-xl-12 col-lg-12">
                                <div class="form-group row">
                                    <div class="col-md-6 col-sm-6 col-xl-6 col-lg-6">
                                        <div class="custom-control custom-checkbox">
                                            <input type="checkbox" class="custom-control-input" id="chkshowpass">
                                            <label class="custom-control-label" for="chkshowpass">
                                                Show password
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-sm-6 col-xl-6 col-lg-6">

                                        <div class="custom-control custom-radio">
                                            <input type="radio" class="custom-control-input" name="optionsRadios" id="chktypeW" value="W" checked>
                                            <label class="custom-control-label" for="chktypeW">
                                                Waiting Activate
                                            </label>
                                        </div>

                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-md-12 col-sm-12 col-xl-12 col-lg-12">
                                <div class="form-group row">
                                    <div class="col-md-6 col-sm-6 col-xl-6 col-lg-6">

                                        <div class="custom-control custom-checkbox">
                                            <input type="checkbox" class="custom-control-input" id="chkkeep">
                                            <label class="custom-control-label" for="chkkeep">
                                                Keep me sign in
                                            </label>
                                        </div>

                                    </div>
                                    <div class="col-md-6 col-sm-6 col-xl-6 col-lg-6">
                                        <div class="custom-control custom-radio">

                                            <input type="radio" class="custom-control-input" name="optionsRadios" id="chktypeP" value="P">
                                            <label class="custom-control-label" for="chktypeP">
                                                Profile Activate
                                            </label>
                                        </div>

                                    </div>
                                </div>
                            </div>


                        </div>


                        <div class="form-group">
                            <button type="button" class="btn btn-secondary btn-block" id="btnsignin">Sign in</button>
                        </div>

                        <div class="form-group">
                            <div class="hr-sect">New Account</div>
                        </div>

                        <div class="form-group">
                            <button type="button" class="btn btn-secondary btn-block" id="btnnewregis" onclick="window.location.href = '/Account/Register';">Create new register subcontract profile</button>
                        </div>
                    </div>



                </div>
            </div>





        </div>
    </div>
    


</div>


<script src="~/Scripts/View/Login.js"></script>