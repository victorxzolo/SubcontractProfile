@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "ReportPersonal";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


    <div id="pageID" style="display:none;">PersonalReport</div>
<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 layout-spacing">
    <div class="skills layout-spacing">


        <div class="widget-content widget-content-area">
            <h3 class="">@Localizer["ReportPersonal"]</h3>

            <div class="widget-content1">
                <div class="form-row mb-4">

                    <div class="form-group col-md-6">
                        <label for="txtcontactphone">@Localizer["contactphone"]</label>
                        <input type="text" class="form-control" id="txtcontactphone" maxlength="10" onchange="return isNumberKey(event);" onkeypress="return isNumberKey(event);" />
                    </div>
                    <div class="form-group col-md-6">
                        <label for="txtfullname">@Localizer["fullname"]</label>
                        <input type="text" class="form-control" id="txtfullname" />
                    </div>
                    <div class="form-group col-md-6">
                        <label for="txtcitizenid">@Localizer["citizen_id"]</label>
                        <input type="text" class="form-control" id="txtcitizenid" maxlength="13" onchange="return isNumberKey(event);" onkeypress="return isNumberKey(event);" />
                    </div>



                </div>
                <div class="form-row mb-4">
                    <div class="form-group col-md-6">
                        <label for="createFrom">@Localizer["CreateDateFrom"]</label>
                        <div class='input-group p-0 date' id='dtcreateFrom'>
                            <input type='text' class="form-control" id="dtcrtFrom" />
                            <div class="input-group-append input-group-addon">
                                <span class="input-group-text px-4">
                                    <i class="fa fa-calendar"></i>
                                </span>
                            </div>

                        </div>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="creatTo">@Localizer["CreateDateTo"]</label>
                        <div class='input-group p-0 date' id='dtcreateTo'>
                            <input type='text' class="form-control" id="dtcrtTo" />
                            <div class="input-group-append input-group-addon">
                                <span class="input-group-text px-4">
                                    <i class="fa fa-calendar"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                <div style="text-align:center">

                    <button id="btnclear" type="button" onclick="clearField();" class="btn btn-dark mb-2">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                             stroke-linecap="round" stroke-linejoin="round" class="feather feather-x-circle">
                            <circle cx="12" cy="12" r="10"></circle>
                            <line x1="15" y1="9" x2="9" y2="15"></line>
                            <line x1="9" y1="9" x2="15" y2="15"></line>
                        </svg> @Localizer["Reset"]
                    </button>
                    <button id="btnSearch" type="button" onclick="onLoadData();" class="btn btn-success mb-2">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                             stroke-linecap="round" stroke-linejoin="round" class="feather feather-search">
                            <circle cx="11" cy="11" r="8"></circle>
                            <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
                        </svg> @Localizer["Search"]
                    </button>

                </div>

            </div>

            <br />
            <div class="widget-heading">
                <h3 class=""> @Localizer["SearchPersonalResult"]</h3>

            </div>
            <div class="table-responsive mb-4 mt-4">
                <table id="tbSearchPersonalResult" class="table table-hover" style="width:100%">
                    <thead>
                        <tr>
                            <th>@Localizer["CitizenId"]</th>
                            <th>@Localizer["TitleName"]</th>
                            <th>@Localizer["FullNameEn"]</th>
                            <th>@Localizer["FullNameTh"]</th>
                            <th>@Localizer["BirthDate"]</th>
                            <th>@Localizer["Gender"]</th>
                            <th>@Localizer["Race"]</th>
                            <th>@Localizer["Nationality"]</th>
                            <th>@Localizer["Religion"]</th>
                            <th>@Localizer["IdentityBy"]</th>
                            <th>@Localizer["AddressId"]</th>
                            <th>@Localizer["IdentityCardAddress"]</th>
                            <th>@Localizer["ContactPhone1"]</th>
                            <th>@Localizer["ContactPhone2"]</th>
                            <th>@Localizer["ContactEmail"]</th>
                            <th>@Localizer["WorkPermitNo"]</th>
                            <th>@Localizer["Education"]</th>
                            <th>@Localizer["ThListening"]</th>
                            <th>@Localizer["ThSpeaking"]</th>
                            <th>@Localizer["ThReading"]</th>
                            <th>@Localizer["ThWriting"]</th>
                            <th>@Localizer["EnListening"]</th>
                            <th>@Localizer["EnSpeaking"]</th>
                            <th>@Localizer["EnReading"]</th>
                            <th>@Localizer["EnWriting"]</th>
                            <th>@Localizer["CertificateType"]</th>
                            <th>@Localizer["CertificateNo"]</th>
                            <th>@Localizer["CertificateExpireDate"]</th>
                            <th>@Localizer["BankCode"]</th>
                            <th>@Localizer["BankName"]</th>
                            <th>@Localizer["AccountNumber"]</th>
                            <th>@Localizer["AccountName"]</th>
                            <th>@Localizer["Status"]</th>
                            <th>@Localizer["CreateDate"]</th>
                            <th>@Localizer["CreateBy"]</th>
                            <th>@Localizer["UpdateBy"]</th>
                            <th>@Localizer["UpdateDate"]</th>



                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>

</div>


@section scripts{

    <script type="text/javascript">
        var oTable;
        var oTableLocation;

           $(document).ready(function () {



               $('#dtcreateFrom').datetimepicker({
                format: "DD/MM/YYYY",
              //  minDate: new Date(),
                showClear: true,
                showClose: true,
                icons: {
                    time: 'fa fa-clock-o',
                    date: 'fa fa-calendar',
                    up: 'fa fa-chevron-up',
                    down: 'fa fa-chevron-down',
                    previous: 'fa fa-chevron-left',
                    next: 'fa fa-chevron-right',
                    today: 'icon-screenshot',
                    clear: 'fa fa-trash',
                    close: 'fa fa-time'
                }
            });
               var fromdate = $('#dtcrtFrom').val();

               $('#dtcreateTo').datetimepicker({
                format: "DD/MM/YYYY",
                ///   minDate: new Date(fromdate),
                showClear: true,
                showClose: true,
                icons: {
                    time: 'fa fa-clock-o',
                    date: 'fa fa-calendar',
                    up: 'fa fa-chevron-up',
                    down: 'fa fa-chevron-down',
                    previous: 'fa fa-chevron-left',
                    next: 'fa fa-chevron-right',
                    today: 'icon-screenshot',
                    clear: 'fa fa-trash',
                    close: 'fa fa-time'
                }
            });


               onLoadData();
        });



         function onLoadData() {
             var i = 0;
             oTableEngineer = $('#tbSearchPersonalResult').DataTable({
                 processing: true, // for show progress bar
                 serverSide: true, // for process server side
                 filter: false, // this is for disable filter (search box)
                 orderMulti: false, // for disable multiple column at once
                 pageLength: 10,
                 order: [],
                 autoWidth: false,
                 searching: false,

                 destroy: true,
                 lengthChange: false,
                 "oLanguage": {
                     "oPaginate": { "sPrevious": '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-arrow-left"><line x1="19" y1="12" x2="5" y2="12"></line><polyline points="12 19 5 12 12 5"></polyline></svg>', "sNext": '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-arrow-right"><line x1="5" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></svg>' },
                     "sInfo": "Showing page _PAGE_ of _PAGES_",
                     "sSearch": false,
                     "sLengthMenu": "Results :  _MENU_",
                 },
                 "scrollX": false,
                 "language": {
                     "zeroRecords": "No data found.",
                     "decimal": ",",
                     "thousands": "."
                 },
                 ajax: {
                     url: '@Url.Action("SearchPersonal", "ReportPersonal")',
                     type: "POST",
                     async: false,
                     datatype: "JSON",
                     data: function (d) {
                         d.citizen_id = $("#txtcitizenid").val(),
                             d.full_name = $("#txtfullname").val(),
                             d.contact_phone = $("#txtcontactphone").val(),
                             d.createFrom = $("#dtcrtFrom").val(),
                             d.createTo = $("#dtcrtTo").val()

                     }
                 },
                 columns: [

                     { data: "CitizenId" },
                     { data: "TitleName" },
                     { data: "FullNameEn" },
                     { data: "FullNameTh" },
                     { data: "BirthDate" },
                     { data: "Gender" },
                     { data: "Race" },
                     { data: "Nationality" },
                     { data: "Religion" },
                     { data: "IdentityBy" },
                     { data: "AddressId" },
                     { data: "IdentityCardAddress" },
                     { data: "ContactPhone1" },
                     { data: "ContactPhone2" },
                     { data: "ContactEmail" },
                     { data: "WorkPermitNo" },
                     { data: "Education" },
                     { data: "ThListening" },
                     { data: "ThSpeaking" },
                     { data: "ThReading" },
                     { data: "ThWriting" },
                     { data: "EnListening" },
                     { data: "EnSpeaking" },
                     { data: "EnReading" },
                     { data: "EnWriting" },
                     { data: "CertificateType" },
                     { data: "CertificateNo" },
                     { data: "CertificateExpireDate" },
                     { data: "BankCode" },
                     { data: "BankName" },
                     { data: "AccountNumber" },
                     { data: "AccountName" },
                     { data: "Status" },
                     { data: "CreateDate" },
                     { data: "CreateBy" },
                     { data: "UpdateBy" },
                     { data: "UpdateDate" }




                 ],
                 "order": [[0, "desc"]],
                 "stripeClasses": [],
                 "initComplete": function (settings, json) {


                 },
                 drawCallback: function () { $('.dataTables_paginate > .pagination').addClass(' pagination-style-13 pagination-bordered mb-5'); }

             });

         }


        function clearField() {

            $("#txtcitizenid").val('');
            $("#txtfullname").val('');
            $("#txtcontactphone").val('');
            $("#dtcrtFrom").val('');
            $("#dtcrtTo").val('');
            onLoadData();
        }

    </script>

}